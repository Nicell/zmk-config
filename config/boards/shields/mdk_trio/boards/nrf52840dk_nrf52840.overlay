&i2c0 {
	status = "disabled";
};

&spi1 {
	status = "okay";
	compatible = "nordic,nrf-spim";
	sck-pin = <46>;
	mosi-pin = <45>;
	miso-pin = <33>;

	cs-gpios = <&gpio1 15 GPIO_ACTIVE_LOW>;

	il0323@0 {
		compatible = "gooddisplay,il0323";
		label = "DISPLAY";
		spi-max-frequency = <4000000>;
		reg = <0>;
		width = <80>;
		height = <128>;
		dc-gpios = <&gpio0 2 GPIO_ACTIVE_LOW>;	/* D9 */
		reset-gpios = <&gpio0 26 GPIO_ACTIVE_LOW>;	/* D8 */
		busy-gpios = <&gpio0 27 GPIO_ACTIVE_LOW>;	/* D7 */
		cdi = <0xd2>;
		tcon = <0x22>;
		pwr = [03 00 38 38];
	};
